<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.jaycen05myyorku.rex2lab6.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Score = 0% (0 attempt in 0 sec)"
        android:id="@+id/result"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@color/abc_color_highlight_material"
        android:textColor="@android:color/holo_blue_dark"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGEX"
        android:id="@+id/regex"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_below="@+id/letter"
        android:textSize="20dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AZ"
        android:id="@+id/letter"
        android:checked="false"
        android:layout_alignTop="@+id/digit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09"
        android:id="@+id/digit"
        android:checked="false"
        android:layout_below="@+id/result"
        android:layout_alignRight="@+id/regex"
        android:layout_alignEnd="@+id/regex"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="^$"
        android:id="@+id/anchor"
        android:checked="false"
        android:layout_alignTop="@+id/digit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/string"
        android:layout_below="@+id/regex"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHECK STRING"
        android:id="@+id/check"
        android:layout_below="@+id/string"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="checkClicked"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_toStartOf="@+id/anchor"
        android:layout_alignRight="@+id/anchor"
        android:layout_alignEnd="@+id/anchor"
        android:layout_below="@+id/check">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/log"/>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignRight="@+id/anchor"
        android:layout_alignEnd="@+id/anchor"
        android:layout_alignTop="@+id/scrollView">
    </FrameLayout>
</RelativeLayout>
